// default LG
lightningBoltNew
{
  cull none
  {
    map gfx/misc/lg0.tga
    blendFunc blend
    rgbgen vertex
    alphaGen vertex

    tcMod scroll -1.2 0
  }
}

lightningBoltNewNoPicmip
{
  nopicmip
  nomipmaps
  cull none
  {
    map gfx/misc/lg0.tga
    blendfunc blend
    rgbgen vertex
    alphaGen vertex

    tcMod scroll -1.5 0
  }
}

